@using QlDiemDanhSinhVien.Common;
@model Model.DiemDanhSV.DIEM_DANH

@{
    ViewBag.Title = "Điểm danh sinh viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<SelectListItem> lstSinhVien = ViewData["lst_sinhvien"] as List<SelectListItem>;
    List<SelectListItem> lstLopMon = ViewData["lst_lopmon"] as List<SelectListItem>;
}

<div class="container-fluid">
    <h1 class="mt-4">Điểm danh sinh viên</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">@Html.ActionLink(Resource.DIEM_DANH_SINH_VIEN_DANH_SACH, "Index", "DiemDanh")</li>
        <li class="breadcrumb-item active">Điểm danh sinh viên</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">

            @using (Html.BeginForm())
            {

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.IdSinhVien, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IdSinhVien", lstSinhVien, new { @style = "width: 251px" })
                            @Html.ValidationMessageFor(model => model.IdSinhVien, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IdLopMon, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IdLopMon", lstLopMon, new { @style = "width: 251px" })
                            @Html.ValidationMessageFor(model => model.IdLopMon, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SoNgayHoc, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SoNgayHoc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SoNgayHoc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TrangThaiHoc, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TrangThaiHoc, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TrangThaiHoc, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default btn-primary" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
</div>

