@model Model.DiemDanhSV.TAI_KHOAN

@{
    ViewBag.Title = "Cập nhật tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<SelectListItem> lstQuyen = ViewData["lst_quyen"] as List<SelectListItem>;
}

<div class="container-fluid">
    <h1 class="mt-4">Cập nhật tài khoản</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">@Html.ActionLink("Danh sách tài khoản", "Index", "TAI_KHOAN")</li>
        <li class="breadcrumb-item active">Cập nhật tài khoản</li>
    </ol>
